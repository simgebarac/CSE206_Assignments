@model CINEMA_WEB3.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<h1 class="text-gradient fw-bold mb-4 text-center" style="background: linear-gradient(45deg, #6a11cb, #2575fc); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
    <i class="fas fa-film fa-beat fa-lg me-2" style="color:#6a11cb;"></i>
    Movie Details
</h1>

<div class="card p-4 shadow-lg rounded-4" style="max-width: 600px; background: #fff8f0; border: 3px solid #6a11cb; margin-left: auto; margin-right: auto;">
    <div class="card-header bg-gradient rounded-3 text-white mb-3 d-flex justify-content-center align-items-center" style="background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%); height: 70px; text-align:center;">
        <h3 class="mb-0 w-100" style="font-weight: 900; font-size: 2.5rem; text-shadow: 1px 1px 6px rgba(105, 0, 179, 0.6); color: #9b59b6; margin: 0;">
            @Model.Title
        </h3>
    </div>
    <div class="card-body fs-5 text-dark">
        <dl class="row">
            <dt class="col-sm-4 fw-semibold text-purple">Genre:</dt>
            <dd class="col-sm-8">@Model.Genre</dd>

            <dt class="col-sm-4 fw-semibold text-purple">Duration:</dt>
            <dd class="col-sm-8">@Model.Duration mins</dd>

            <dt class="col-sm-4 fw-semibold text-purple">Release Date:</dt>
            <dd class="col-sm-8">@Model.ReleaseDate?.ToString("dd MMM yyyy")</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-3 mt-4 justify-content-center">
    <a asp-action="Edit" asp-route-id="@Model?.MovieId"
       class="btn btn-warning btn-lg rounded-pill shadow"
       style="width: 160px; font-weight: 600; letter-spacing: 0.05em; transition: transform 0.2s ease-in-out;"
       onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0 8px 20px rgba(255, 165, 0, 0.6)';"
       onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='';">
        <i class="fas fa-pencil-alt me-2"></i> Edit
    </a>

    <a asp-action="Index"
       class="btn btn-danger btn-lg rounded-pill shadow"
       style="width: 160px; font-weight: 600; letter-spacing: 0.05em; transition: transform 0.2s ease-in-out;"
       onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0 8px 20px rgba(220, 53, 69, 0.6)';"
       onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='';">
        <i class="fas fa-arrow-left me-2"></i> Back
    </a>
</div>

<style>
    .text-purple {
        color: #9b59b6;
        font-weight: 600;
    }
</style>
