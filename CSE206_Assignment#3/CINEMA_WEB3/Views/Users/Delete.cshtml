@model CINEMA_WEB3.Models.User

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger my-4">Delete User</h1>

<div class="card shadow p-4 mx-auto" style="max-width: 650px; background: linear-gradient(135deg, #f3e5f5, #ce93d8); border-radius: 15px;">
    <h4 class="text-center mb-3" style="color: #6a1b9a; font-weight: bold;">Are you sure you want to delete this user?</h4>

    <dl class="row mb-4" style="font-size: 1.1rem;">
        <dt class="col-sm-4 fw-bold" style="color: #4a148c;">Username:</dt>
        <dd class="col-sm-8">@Model.Username</dd>

        <dt class="col-sm-4 fw-bold" style="color: #4a148c;">Password Hash:</dt>
        <dd class="col-sm-8">@Model.PasswordHash</dd>

        <dt class="col-sm-4 fw-bold" style="color: #4a148c;">Full Name:</dt>
        <dd class="col-sm-8">@Model.FullName</dd>

        <dt class="col-sm-4 fw-bold" style="color: #4a148c;">Role:</dt>
        <dd class="col-sm-8">@Model.Role</dd>
    </dl>

    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger btn-lg me-3" style="border-radius: 30px; padding: 0.6rem 2.5rem;">
            Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-lg" style="border-radius: 30px; padding: 0.6rem 2.5rem;">
            Cancel
        </a>
    </form>
</div>

<style>
    .btn-danger:hover {
        background-color: #6a1b9a;
        border-color: #6a1b9a;
    }

    .btn-secondary:hover {
        background-color: #4a148c;
        border-color: #4a148c;
        color: white;
    }
</style>
