@model CINEMA_WEB3.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<h1 class="text-center text-primary my-4">Edit Movie</h1>

<div class="card shadow-lg p-4 mx-auto" style="max-width: 700px; background: linear-gradient(135deg, #e1f5fe, #b3e5fc); border-radius: 20px;">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="MovieId" />

        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label fw-bold">Title</label>
            <input asp-for="Title" class="form-control rounded-pill px-4" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Genre" class="form-label fw-bold">Genre</label>
            <input asp-for="Genre" class="form-control rounded-pill px-4" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Duration" class="form-label fw-bold">Duration (mins)</label>
            <input asp-for="Duration" class="form-control rounded-pill px-4" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="ReleaseDate" class="form-label fw-bold">Release Date</label>
            <input asp-for="ReleaseDate" class="form-control rounded-pill px-4" type="date" />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg px-5 rounded-pill me-3">💾 Save</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg px-5 rounded-pill">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
