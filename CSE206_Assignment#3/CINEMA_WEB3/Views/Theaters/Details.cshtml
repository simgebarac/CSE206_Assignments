@model CINEMA_WEB3.Models.Theater

@{
    ViewData["Title"] = "Theater Details";
}

<h1 class="text-gradient fw-bold mb-4 text-center"
    style="background: linear-gradient(45deg, #6a11cb, #2575fc);
           -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
    <i class="fas fa-building fa-spin fa-lg me-2" style="color:#2575fc;"></i>
    Theater Details
</h1>

<div class="card p-4 shadow-lg rounded-4" style="max-width: 600px; background: #f0f7ff; border: 3px solid #2575fc; margin-left: auto; margin-right: auto;">
    <div class="card-header bg-gradient rounded-3 text-white mb-3 d-flex justify-content-center align-items-center"
         style="background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%); height: 70px; text-align:center;">
        <h3 class="mb-0 w-100"
            style="font-weight: 900; font-size: 2.5rem; text-shadow: 1px 1px 6px rgba(37, 117, 252, 0.7); color: #1c54b2; margin: 0;">
            @Model.Name
        </h3>
    </div>
    <div class="card-body fs-5 text-dark">
        <dl class="row">
            <dt class="col-sm-4 fw-semibold text-primary">Seat Capacity:</dt>
            <dd class="col-sm-8">@Model.SeatCapacity</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-3 mt-4 justify-content-center">
    <a asp-action="Edit" asp-route-id="@Model?.TheaterId"
       class="btn btn-primary btn-lg rounded-pill shadow"
       style="width: 160px; font-weight: 600; letter-spacing: 0.05em; transition: transform 0.2s ease-in-out;"
       onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0 8px 20px rgba(38, 143, 255, 0.6)';"
       onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='';">
        <i class="fas fa-edit me-2"></i> Edit
    </a>

    <a asp-action="Index"
       class="btn btn-secondary btn-lg rounded-pill shadow"
       style="width: 160px; font-weight: 600; letter-spacing: 0.05em; transition: transform 0.2s ease-in-out;"
       onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0 8px 20px rgba(108, 117, 125, 0.6)';"
       onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='';">
        <i class="fas fa-arrow-left me-2"></i> Back
    </a>
</div>
