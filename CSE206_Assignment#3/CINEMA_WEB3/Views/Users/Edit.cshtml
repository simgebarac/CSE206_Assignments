@model CINEMA_WEB3.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h1 class="text-center text-info my-4">Edit User</h1>

<div class="card shadow p-4 mx-auto" style="max-width: 700px; background: linear-gradient(135deg, #e8f5e9, #c8e6c9); border-radius: 20px;">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="UserId" />

        <div class="form-group mb-3">
            <label asp-for="Username" class="form-label fw-bold">Username</label>
            <input asp-for="Username" class="form-control rounded-pill px-4" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PasswordHash" class="form-label fw-bold">Password</label>
           
            <input asp-for="PasswordHash" class="form-control rounded-pill px-4" type="password" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
            <input asp-for="FullName" class="form-control rounded-pill px-4" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Role" class="form-label fw-bold">Role</label>
          
            <select asp-for="Role" class="form-control rounded-pill px-4" asp-items="@ViewBag.RoleList"></select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg px-5 rounded-pill me-3">💾 Save</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg px-5 rounded-pill">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}