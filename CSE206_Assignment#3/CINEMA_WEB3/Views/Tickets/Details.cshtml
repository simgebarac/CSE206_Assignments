@model CINEMA_WEB3.Models.Ticket

@{
    ViewData["Title"] = "Ticket Details";
}

<h1 class="text-gradient fw-bold mb-4 text-center"
    style="background: linear-gradient(45deg, #ff6a00, #ee0979);
           -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
    <i class="fas fa-ticket-alt fa-beat fa-lg me-2" style="color:#ee0979;"></i>
    Ticket Details
</h1>

<div class="card p-4 shadow-lg rounded-4" style="max-width: 650px; background: #fff0f6; border: 3px solid #ee0979; margin-left: auto; margin-right: auto;">
    <div class="card-header bg-gradient rounded-3 text-white mb-3 d-flex justify-content-center align-items-center"
         style="background: linear-gradient(90deg, #ff6a00 0%, #ee0979 100%); height: 70px; text-align:center;">
        <h3 class="mb-0 w-100"
            style="font-weight: 900; font-size: 2.5rem; text-shadow: 1px 1px 8px rgba(238, 9, 121, 0.8); color: #b13b6f; margin: 0;">
            Seat #: @Model.SeatNumber
        </h3>
    </div>
    <div class="card-body fs-5 text-dark">
        <dl class="row">
            <dt class="col-sm-4 fw-semibold text-danger">Purchase Date:</dt>
            <dd class="col-sm-8">@Model.PurchaseDate?.ToString("MMMM dd, yyyy")</dd>

            <dt class="col-sm-4 fw-semibold text-danger">Showtime ID:</dt>
            <dd class="col-sm-8">@Model.Showtime.ShowtimeId</dd>

            <dt class="col-sm-4 fw-semibold text-danger">User ID:</dt>
            <dd class="col-sm-8">@Model.User.UserId</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-3 mt-4 justify-content-center">
    <a asp-action="Edit" asp-route-id="@Model?.TicketId"
       class="btn btn-danger btn-lg rounded-pill shadow"
       style="width: 160px; font-weight: 600; letter-spacing: 0.05em; transition: transform 0.2s ease-in-out;"
       onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0 8px 20px rgba(238, 9, 121, 0.6)';"
       onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='';">
        <i class="fas fa-edit me-2"></i> Edit
    </a>

    <a asp-action="Index"
       class="btn btn-secondary btn-lg rounded-pill shadow"
       style="width: 160px; font-weight: 600; letter-spacing: 0.05em; transition: transform 0.2s ease-in-out;"
       onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0 8px 20px rgba(108, 117, 125, 0.6)';"
       onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='';">
        <i class="fas fa-arrow-left me-2"></i> Back
    </a>
</div>
