@model CINEMA_WEB3.Models.Theater

@{
    ViewData["Title"] = "Edit Theater";
}

<h1 class="text-center text-primary my-4">Edit Theater</h1>

<div class="card shadow-lg p-4 mx-auto" style="max-width: 600px; background: linear-gradient(135deg, #f1f8e9, #dcedc8); border-radius: 20px;">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="TheaterId" />

        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label fw-bold">Theater Name</label>
            <input asp-for="Name" class="form-control rounded-pill px-4" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="SeatCapacity" class="form-label fw-bold">Seat Capacity</label>
            <input asp-for="SeatCapacity" class="form-control rounded-pill px-4" type="number" min="0" />
            <span asp-validation-for="SeatCapacity" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg px-5 rounded-pill me-3">💾 Save</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg px-5 rounded-pill">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
