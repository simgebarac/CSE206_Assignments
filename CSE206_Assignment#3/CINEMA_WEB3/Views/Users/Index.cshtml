@model IEnumerable<CINEMA_WEB3.Models.User>

@{
    ViewData["Title"] = "Users";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<style>
    thead.thead-dark th {
        background-color: #343a40;
        color: #f8f9fa;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    td .btn {
        margin-right: 5px;
    }

    td .btn:hover {
        transform: scale(1.1);
        transition: transform 0.15s ease-in-out;
    }

    p > a.btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-weight: 600;
        box-shadow: 0 4px 8px rgba(0,123,255,0.3);
        transition: background-color 0.3s ease;
    }

    p > a.btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
        box-shadow: 0 6px 12px rgba(0,86,179,0.5);
    }

    /* Dropdown'ın tablo içinde daha iyi görünmesi için stil */
    .table-role-dropdown {
        width: 120px; /* Genişliği ayarlayabilirsiniz */
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        height: calc(1.5em + 0.5rem + 2px); /* Bootstrap form-control boyutuna yakın */
    }
</style>

<h1 class="mb-4 text-primary">User List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New
    </a>
</p>

<table class="table table-striped table-hover table-bordered shadow-sm">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Username)</th>
            <th>@Html.DisplayNameFor(model => model.PasswordHash)</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Role)</th>
            <th style="width:140px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                <td>@Html.DisplayFor(modelItem => item.PasswordHash)</td>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>
                   
                    <select class="form-control table-role-dropdown">
                       
                        @{
                            
                            var roles = new List<string> { "customer", "admin" };

                            
                            foreach (var role in roles)
                            {
                               
                                var optionHtml = $"<option value=\"{role}\"";
                                if (item.Role == role)
                                {
                                    optionHtml += " selected=\"selected\"";
                                }
                                optionHtml += $">{role.First().ToString().ToUpper()}{role.Substring(1)}</option>";

                                @Html.Raw(optionHtml)
                                
                            }
                        }
                    </select>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-warning" title="Edit">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-info" title="Details">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this user?');">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>