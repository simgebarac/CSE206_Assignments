@model CINEMA_WEB3.Models.Showtime

@{
    ViewData["Title"] = "Showtime Details";
}

<h1 class="text-gradient fw-bold mb-4 text-center"
    style="background: linear-gradient(45deg, #ff6a00, #ee0979);
           -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
    <i class="fas fa-clock fa-beat fa-lg me-2" style="color:#ee0979;"></i>
    Showtime Details
</h1>

<div class="card p-4 shadow-lg rounded-4" style="max-width: 600px; background: #fff0f6; border: 3px solid #ee0979; margin-left: auto; margin-right: auto;">
    <div class="card-header bg-gradient rounded-3 text-white mb-3 d-flex justify-content-center align-items-center"
         style="background: linear-gradient(90deg, #ff6a00 0%, #ee0979 100%); height: 70px; text-align:center;">
        <h3 class="mb-0 w-100"
            style="font-weight: 900; font-size: 2.5rem; text-shadow: 1px 1px 6px rgba(238, 9, 121, 0.6); color: #d90479; margin: 0;">
            @Model.StartTime?.ToString("dd MMM yyyy HH:mm")
        </h3>
    </div>
    <div class="card-body fs-5 text-dark">
        <dl class="row">
            <dt class="col-sm-4 fw-semibold text-pink">Movie:</dt>
            <dd class="col-sm-8">@Model.Movie?.Title</dd>

            <dt class="col-sm-4 fw-semibold text-pink">Theater:</dt>
            <dd class="col-sm-8">@Model.Theater?.Name</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-3 mt-4 justify-content-center">
    <a asp-action="Edit" asp-route-id="@Model?.ShowtimeId"
       class="btn btn-warning btn-lg rounded-pill shadow"
       style="width: 160px; font-weight: 600; letter-spacing: 0.05em; transition: transform 0.2s ease-in-out;"
       onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0 8px 20px rgba(255, 165, 0, 0.6)';"
       onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='';">
        <i class="fas fa-pencil-alt me-2"></i> Edit
    </a>

    <a asp-action="Index"
       class="btn btn-danger btn-lg rounded-pill shadow"
       style="width: 160px; font-weight: 600; letter-spacing: 0.05em; transition: transform 0.2s ease-in-out;"
       onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0 8px 20px rgba(220, 53, 69, 0.6)';"
       onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='';">
        <i class="fas fa-arrow-left me-2"></i> Back
    </a>
</div>

<style>
    .text-pink {
        color: #d6336c;
        font-weight: 600;
    }
</style>
